<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragment.bottomnavfragment.SozlamalarFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_100"
        android:fitsSystemWindows="true"
        app:elevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|snap">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:background="#E5E5E5"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/title"
                android:layout_marginLeft="@dimen/_24sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sozlamalar"
                android:textColor="#000000"
                android:textSize="25dp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/share"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="   Ulashish"
        android:textAllCaps="false"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_15sdp"
        android:drawableLeft="@drawable/share"
        android:background="@drawable/rectangle_soz"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout" />

    <Button
        android:id="@+id/info"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="   Dastur haqida"
        android:textAllCaps="false"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_15sdp"
        android:drawableLeft="@drawable/info"
        android:background="@drawable/rectangle_soz"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share" />

    <Button
        android:id="@+id/add"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="   Adib qo'shish"
        android:textAllCaps="false"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_15sdp"
        android:drawableLeft="@drawable/add"
        android:background="@drawable/rectangle_soz"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info" />

</androidx.constraintlayout.widget.ConstraintLayout>